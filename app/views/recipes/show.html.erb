<div class="max-w-4xl mx-auto p-6">
  <% if notice.present? %>
    <div class="mb-4 text-green-600 bg-green-100 border border-green-300 p-4 rounded-lg">
      <%= notice %>
    </div>
  <% end %>

  <div class="bg-white shadow-lg rounded-lg p-10">

    <p class="text-3xl font-bold text-gray-800"><%= @recipe.title %></p>
    <img
      src="<%= @recipe.image %>"
      alt="<%= @recipe.title %>"
      class="h-64 object-cover mt-4 max-w-4xl mx-auto"
    >
    <div class="flex gap-2">
      <p>Image format :</p>
      <span class="italic font-bold">
        <%= @recipe.image_type %>
      </span>
    </div>
    <% if @ingredients.any? %>
      <h2>Ingrdients :</h2>
      <ul>
        <% @ingredients.each do |ingredient| %>
          <li><%= "#{ingredient.amount} #{ingredient.unit} de #{ingredient.name}" %></li>
        <% end %>
      </ul>
    <% else %>
      <p>There are no ingredients for this recipe</p>
    <% end %>
      </div>

      <div class="mt-6 flex justify-between items-center">
        <div class="space-x-4">
          <%= link_to "Edit", edit_recipe_path(@recipe), class: "inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
          <%= link_to "Back to Recipes", recipes_path, class: "inline-block bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
        </div>

        <div>
          <%= button_to "Delete", @recipe, method: :delete,
                        class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600",
                        data: { confirm: "Are you sure you want to delete this recipe?" } %>
        </div>
      </div>
      </div>
